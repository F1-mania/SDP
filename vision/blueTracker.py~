import numpy as np
import cv2
from crop_field import *

class Tracker():
    def __init__(self,frame,color,corner,t):
        self.color = colors[color]
        self.initLeft = topleft
        self.initRight = topRight
        self.pos = None
        self.angle = None
        self.frame = frame
        self.initwindow
        self.window 
        self.term_crit

    def update(frame): 
        try:
            hsv = cv2.cvtColor(frame, cv2.COLOR_BGR2HSV)
            dst = cv2.calcBackProject([hsv],[0],roi_hist,[0,180],1)

            ret, self.window = cv2.CamShift(dst, self.window, self.term_crit)

            pos,dim, angle = ret
            self.pos = pos
            self.angle = angle

        except:
            self.window = self.initwindow
            self.update(frame)
